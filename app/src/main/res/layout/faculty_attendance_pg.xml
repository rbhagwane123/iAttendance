<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Faculty_Attendance_Screen.FacultyAttendancePg">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            style="@style/Widget.Material3.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/stud_attendance_toolbar_menu"
            app:navigationIcon="@drawable/back_icon"
            app:title="@string/attendance"
            app:titleTextAppearance="@style/YourCustomTextAppearance" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/alert_bg"
                android:gravity="center"
                android:paddingStart="22dp"
                android:paddingTop="10dp"
                android:paddingEnd="22dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/alert_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/alert_icon"
                    app:tint="@color/red" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_toEndOf="@+id/alert_icon"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:text="Automatic session (1 min) - 00.35 sec"
                    android:textColor="@color/red"
                    android:textSize="14sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:paddingStart="18dp"
                android:paddingEnd="18dp">

                <TextView
                    android:id="@+id/first_letter"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/first_letter_bg"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:text="S"
                    android:textColor="@color/white"
                    android:textSize="21sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/subj_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/inter_semibold"
                        android:letterSpacing="0.02"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:maxLines="1"
                        android:text="Software Project Management"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:src="@drawable/avatar_icon"
                            app:tint="@color/secondary" />

                        <TextView
                            android:id="@+id/prof_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:fontFamily="@font/inter_medium"
                            android:text="Prof. Kirti Muley"
                            android:textColor="@color/secondary"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="18dp"
                android:paddingTop="24dp"
                android:paddingEnd="18dp"
                android:paddingBottom="24dp">

                <TextView
                    android:id="@+id/div"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_medium"
                    android:text="Div-B"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/date_duration_bg"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/calender_imgBtn"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/calender_icon"
                            app:backgroundTint="#00000000"
                            app:tint="@color/dark_grey" />

                        <TextView
                            android:id="@+id/calender_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:fontFamily="@font/inter_medium"
                            android:text="Nov 25, Wed"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="15dp"
                        android:background="@color/alert_bg" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/duration_imgBtn"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/duration_icon"
                            app:backgroundTint="#00000000"
                            app:tint="@color/dark_grey" />

                        <TextView
                            android:id="@+id/duration_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:fontFamily="@font/inter_medium"
                            android:text="09 - 10 AM"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/startSessionBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="18dp"
                    android:backgroundTint="@color/primary_blue"
                    android:fontFamily="@font/inter_medium"
                    android:fontFeatureSettings="pnum, lnum"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:paddingStart="24dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="12dp"
                    android:text="@string/start"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:cornerRadius="6dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/endSessionBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_marginEnd="18dp"
                    app:backgroundTint="@null"
                    android:background="@drawable/country_code_border"
                    android:fontFamily="@font/inter_medium"
                    android:fontFeatureSettings="pnum, lnum"
                    android:gravity="center"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:paddingStart="24dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="24dp"
                    android:paddingBottom="12dp"
                    android:text="@string/end"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:cornerRadius="6dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="34dp"
                android:layout_marginBottom="34dp"
                android:background="@color/alert_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/category_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:fontFamily="@font/inter_medium"
                    android:text="@string/history"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/subj_cards"
                    android:orientation="vertical"
                    android:paddingBottom="18dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:id="@+id/viewSub"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/subj_cards"
                        android:backgroundTint="@color/primary_blue"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        tools:ignore="RtlSymmetry">

                        <TextView
                            android:id="@+id/subj_abbr"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/inter_semibold"
                            android:letterSpacing="0.02"
                            android:text="@string/your_presence"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/card_border" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:fontFamily="@font/inter_semibold"
                            android:letterSpacing="0.02"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:maxLines="1"
                            android:text="@string/overall_att"
                            android:textColor="@color/secondary"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:fontFamily="@font/inter_medium"
                            android:text="96%"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/progress_bg" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="5dp"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:background="@drawable/progress_bg" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="5dp"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:background="@drawable/progress_bg" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="5dp"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:background="@drawable/progress_bg" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="5dp"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:background="@drawable/progress_bg" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="5dp"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:background="@drawable/progress_bg" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="5dp"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:background="@drawable/progress_bg" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="5dp"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:background="@drawable/progress_bg" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="5dp"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:background="@drawable/progress_bg" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="5dp"
                            android:layout_marginStart="6dp"
                            android:layout_weight="1"
                            android:background="@drawable/progress_bg" />


                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="8dp">

                        <ImageView
                            android:id="@+id/attendance_count_icon"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/attendance_count_icon"
                            app:tint="@color/secondary" />

                        <TextView
                            android:id="@+id/present_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_toEndOf="@+id/attendance_count_icon"
                            android:fontFamily="@font/inter_medium"
                            android:text="27"
                            android:textColor="@color/green"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/slash"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:layout_toEndOf="@+id/present_count"
                            android:fontFamily="@font/inter_medium"
                            android:text="/"
                            android:textColor="@color/secondary"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/total_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:layout_toEndOf="@+id/slash"
                            android:fontFamily="@font/inter_medium"
                            android:text="29"
                            android:textColor="@color/secondary"
                            android:textSize="14sp" />

                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="10dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="18dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/date_duration_bg"
                        android:backgroundTint="@color/alert_bg"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="16dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="8dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <ImageButton
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/calender_icon"
                                app:backgroundTint="#00000000"
                                app:tint="@color/dark_grey" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:fontFamily="@font/inter_medium"
                                android:text="Nov 25, Wed"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="15dp"
                            android:background="@color/card_border" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:gravity="center">

                            <ImageButton
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/duration_icon"
                                app:backgroundTint="#00000000"
                                app:tint="@color/dark_grey" />

                            <TextView
                                android:id="@+id/history_duration_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:fontFamily="@font/inter_medium"
                                android:text="09 - 10 AM"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>