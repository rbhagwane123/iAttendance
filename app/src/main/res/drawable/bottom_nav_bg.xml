<!-- res/drawable/border_bottom_navigation.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background color for the BottomNavigationView -->
    <item android:drawable="@android:color/white"/>

    <!-- Border color and width -->
    <item
        android:left="-1dp"
        android:right="-1dp"
        android:top="-1dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <stroke
                android:color="@color/nav_border" android:width="2dp"/>
            <!-- Change this to the desired border color -->
             <!-- Change this to the desired border width -->
        </shape>
    </item>
</layer-list>
